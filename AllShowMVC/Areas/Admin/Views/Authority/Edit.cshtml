@model VW_Authority

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmCall" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>編輯權限</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.EmpName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.EmpName
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AuthorityName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.AuthorityName
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                <span class="field-validation-valid" data-valmsg-for="Note" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="更新權限" class="btn btn-primary" id="btn_Submit" />
            </div>
        </div>
    </div>
    @Html.HiddenFor(m => m.EmpNo)
    @Html.HiddenFor(m => m.AuthorityNo)
}

<div>
    @Html.ActionLink("回到列表", "Index", null, new { Area = "Admin", @class = "btn btn-info" })
</div>
<script>
    var url = '@Url.Action("Index", "Authority", new { Area = "Admin" })';
    var apiUrl = '@Url.HttpRouteUrl("DefaultApi", new { controller= "Authority" })?EmpNo=@Model.EmpNo&AuthorityNo=@Model.AuthorityNo';
</script>
<script src="~/scripts/Admin/Authority/Edit.js"></script>