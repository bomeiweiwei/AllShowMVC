@model VW_Authority

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmCall" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-horizontal">
        <h4>新增權限</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.EmpNo, AllShowResource.EmpName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EmpNo", (IEnumerable<SelectListItem>)Model.EmpDDL, new { @class = "form-control" })
                @*<span class="field-validation-valid txtRed" data-valmsg-for="EmpNo" data-valmsg-replace="true"></span>*@
                @Html.ValidationMessageFor(m => m.EmpNo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AuthorityNo, AllShowResource.AuthorityName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AuthorityNo", (IEnumerable<SelectListItem>)Model.AuthorityFunDDL, new { @class = "form-control" })
                @*<span class="field-validation-valid txtRed" data-valmsg-for="AuthorityNo" data-valmsg-replace="true"></span>*@
                @Html.ValidationMessageFor(m => m.AuthorityNo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                @*<span class="field-validation-valid" data-valmsg-for="Note" data-valmsg-replace="true"></span>*@
                @Html.ValidationMessageFor(m => m.Note, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="新增權限" class="btn btn-primary" id="btn_Submit" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("回到列表", "Index", null, new { Area = "Admin", @class = "btn btn-info" })
</div>

@section scripts{
    <script>
        var url = '@Url.Action("Index", "Authority", new { Area = "Admin" })';
        var apiUrl = '@Url.HttpRouteUrl("DefaultApi", new { controller= "Authority" })/';
    </script>
    <script src="~/scripts/Admin/Authority/Create.js"></script>
}